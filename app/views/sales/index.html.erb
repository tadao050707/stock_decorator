<h2>売上一覧</h2>
<p><%= notice %></p>
<%= link_to '新規登録', new_sale_path %>

<table>
  <tr>
    <th>売上コード</th>
    <th>売上日</th>
    <th>得意先</th>
  </tr>
  <% @sales.each do |sl| %>
    <tr>
      <td><%= sl.code %></td>
      <td><%= sl.date_at %></td>
      <td><%= Client.find(sl.client_id).name %></td>
      <td><%= link_to '編集', edit_sale_path(sl.id), class: "btn btn-success" %></td>
      <td><%= link_to "削除", sale_path(sl.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'メインメニュー', menus_path %>